{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/docs/*": ["./src/docs/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
