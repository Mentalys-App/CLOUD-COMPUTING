generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

model User {
  uid_firebase   String   @id   
  email          String   @unique
  profile        Profile?
  createdAt      DateTime @default(now())
}

model Profile {
  firebaseId     String   @id
  firebaseUser   User     @relation(fields: [firebaseId], references: [uid_firebase])
  username       String
  profile_pic    String?
  full_name      String
  birth_date     DateTime @db.Date
  location       String
  gender         Gender
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

